@model IEnumerable<QuizViewModel>

<h2>Manage Quizzes</h2>
<a asp-action="AddQuiz" class="btn btn-primary mb-3"><i class="bi bi-plus"></i> Add New Quiz</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.Description</td>
                <td>
                    <div class="d-flex gap-2">
                        <form asp-action="EditQuiz" method="post">
                            <input type="hidden" name="quizId" value="@quiz.QuizId" />
                            <button type="submit" class="btn btn-sm btn-warning" style="background-color:green"><i class="bi bi-pencil-fill"></i> Edit</button>
                        </form>

                        <form asp-action="DeleteQuiz" method="post">
                            <input type="hidden" name="quizId" value="@quiz.QuizId" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this quiz?');">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </button>
                        </form>
                        <a asp-action="ViewResults" asp-route-quizId="@quiz.QuizId" class="btn btn-sm btn-warning"><i class="bi bi-view-stacked"></i> View Results</a>

                        @* <form asp-action="ViewResults" method="post"> *@
                        @*     <input type="hidden" name="quizId" value="@quiz.QuizId" /> *@
                        @*     <button type="submit" class="btn btn-sm btn-warning">View Results</button> *@
                        @* </form> *@
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
