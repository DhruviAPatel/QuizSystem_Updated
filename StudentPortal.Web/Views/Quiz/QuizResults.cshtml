
@model List<QuizResultViewModel>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-bar-chart-fill"></i> Quiz Results Overview</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-person-badge"></i> Student ID</th>
                        <th><i class="bi bi-graph-up"></i> Total Score</th>
                        <th><i class="bi bi-percent"></i> Percentage</th>
                        <th><i class="bi bi-clock-history"></i> Taken On</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var result in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@result.StudentId</td>
                                <td>@result.TotalScore</td>
                                <td>@result.PercentageScore%</td>
                                <td>@result.TakenDate.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No results available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
