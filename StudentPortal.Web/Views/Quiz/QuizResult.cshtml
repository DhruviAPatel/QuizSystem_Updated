

                @model StudentPortal.Web.Models.QuizResultViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
            <h2 class="mb-0"><i class="bi bi-clipboard-check-fill"></i> Quiz Result</h2>
        </div>
        <div class="card-body text-center">
            <h4 class="mb-4 text-primary fw-bold">@Model.QuizTitle</h4>

            <div class="row justify-content-center mb-4">
                <div class="col-md-6">
                    <ul class="list-group list-group-flush text-start">
                        <li class="list-group-item fs-5"><i class="bi bi-card-list text-dark me-2"></i> Total Questions: <strong>@Model.TotalQuestions</strong></li>
                        <li class="list-group-item fs-5 text-success"><i class="bi bi-check-circle-fill me-2"></i> Correct Answers: <strong>@Model.CorrectAnswers</strong></li>
                        <li class="list-group-item fs-5 text-primary"><i class="bi bi-graph-up-arrow me-2"></i> Total Score: <strong>@Model.TotalScore</strong></li>
                        <li class="list-group-item fs-5 text-danger"><i class="bi bi-percent me-2"></i> Percentage Score: <strong>@Model.PercentageScore%</strong></li>
                    </ul>
                </div>
            </div>

            <div class="progress my-4" style="height: 25px;">
                <div class="progress-bar bg-success" role="progressbar"
                     style="width: @Model.PercentageScore%;" aria-valuenow="@Model.PercentageScore" aria-valuemin="0" aria-valuemax="100">
                    @Model.PercentageScore%
                </div>
            </div>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">
                <i class="bi bi-house-door-fill"></i> Return to Home
            </a>
        </div>
    </div>
</div>
