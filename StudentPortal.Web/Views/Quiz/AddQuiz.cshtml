@model QuizViewModel

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .quiz-form-container {
        max-width: 700px;
        margin: 40px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

        .quiz-form-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #007bff;
            font-weight: 700;
        }

    label {
        font-weight: 600;
        margin-top: 15px;
    }

    .btn-primary {
        font-weight: 600;
        width: 100%;
        margin-top: 25px;
    }
</style>

<form method="post" asp-action="AddQuiz" class="form-group">
    <label>Title</label>
    <input type="text" name="Title" class="form-control" required />

    <label>Description</label>
    <textarea name="Description" class="form-control" required></textarea>

    <div class="form-group">
        <label for="TotalQuestions">Number of Questions to Display to Students</label>
        <input type="number" class="form-control" name="TotalQuestions" id="TotalQuestions" min="1" required />
    </div>


    <button type="submit" class="btn btn-primary mt-3">Add Quiz</button>
</form>

